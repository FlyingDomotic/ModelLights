<!-- Page to setup light server -->
<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>Configuration du serveur de lumière</title>
		<link rel="stylesheet" href="style.css" type="text/css" />
		<script src="translate.js"></script>
		<script src="logic.js"></script>
	</head>
	<body onload="loadSelect('fileToStart', './configs');initAll(false);">
        <div id="header" class="header">
            <label id="serverName"></label>&nbsp;<label id="serverVersion"></label><br>
            <hr />
        </div>
        <!-- Language selector (default to user's first prefered language matching those available (en,fr), (en) else) -->
		<div class="center">
			<label data-i18n-key="languageSelector">Language </label>&nbsp;
			<select data-i18n-switcher class="locale-switcher">
				<option value="en">English</option>
				<option value="fr">Français</option>
			</select>
            <br>
			<label data-i18n-key="fileToStart">Configuration file</label>&nbsp;
            <select id="fileToStart" onchange="changed(this);">
			</select>
            <br>
        </div>
        <div class="center">
			<!-- Display and set various variables saved settings.json -->
			<hr />
            <label data-i18n-key="ledCount">LED count:</label>&nbsp;<input type="number" id="ledCount" min="1" max="2048" value="100" style="width:60px" onchange="changed(this);"/>
            &nbsp;&nbsp;&nbsp;
            <label data-i18n-key="ledPin">LED pin:</label>&nbsp;<input type="number" id="ledPin" min="0" max="16" value="4" style="width:60px" onchange="changed(this);"/>
            &nbsp;&nbsp;&nbsp;
            <label data-i18n-key="ledType">LED type:</label>
            <select id="ledType" onchange="changed(this);">
                <option value="RGB" selected>RGB</option>
                <option value="RBG">RBG</option>
                <option value="GRB">GRB</option>
                <option value="GBR">GBR</option>
                <option value="BRG">BRG</option>
                <option value="BGR">BGR</option>
            </select>
            &nbsp;&nbsp;&nbsp;
            <label data-i18n-key="ledFrequency">LED frequency:</label>
            <select id="ledFrequency" onchange="changed(this);">
                <option value="400" selected="selected">400 kHz</option>
                <option value="800">800 kHz</option>
            </select>
            <hr />
			<label data-i18n-key="ssid">Wifi SSID:</label>&nbsp;<input type="text" id="ssid" maxlen="32" size="32" onchange="changed(this);"/><br>
			<label data-i18n-key="pwd">Password:</label>&nbsp;<input type="text" id="pwd" minlength="8" maxlen="32" size="32" onchange="changed(this);"/><br>
			<label data-i18n-key="accessPointPwd">Access Point password:</label>&nbsp;<input type="text" id="accessPointPwd" minlength="8" maxlen="32" size="32" onchange="changed(this);"/><br>
			<label data-i18n-key="name">Module name:</label>&nbsp;<input type="text" id="name" maxlen="32" size="32" onchange="changed(this);"/><br>
			<hr />
			<label data-i18n-key="syslogServer">Syslog server:</label>&nbsp;<input type="text" id="syslogServer" maxlen="64" size="32" onchange="changed(this);"/><br>
			<label data-i18n-key="syslogPort">Syslog port:</label>&nbsp;<input type="number" id="syslogPort" size="32" onchange="changed(this);"/><br>
            <hr />
            <label data-i18n-key="traceEnter">Display routine entering</label>&nbsp;<input type="checkbox" id="traceEnter" onchange="changed(this);"/><br>
			<label data-i18n-key="traceDebug">Display debug messages</label>&nbsp;<input type="checkbox" id="traceDebug" onchange="changed(this);"/><br>
			<label data-i18n-key="traceVerbose">Display verbose messages</label>&nbsp;<input type="checkbox" id="traceVerbose" onchange="changed(this);"/><br>
			<label data-i18n-key="traceJava">Display Java traces</label>&nbsp;<input type="checkbox" id="traceJava" onchange="changed(this);"/><br>
			<label data-i18n-key="traceSyslog">Send trace to syslog</label>&nbsp;<input type="checkbox" id="traceSyslog" onchange="changed(this);"/><br>
			<hr />
            <input type="button" class="blueBtn" style="width:175px" data-i18n-key="restart" id="restart" value="restart" onclick="changed(this);"/>
			<hr />
		</div> 
		<div id="messages" class="largeScroll center"></div>
		<hr />
	</body>
</html>